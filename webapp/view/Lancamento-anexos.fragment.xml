<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >

<Popover
    id="idLanc-Anexos"
    title="Anexos para lançamento 123"
    class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
    placement="Bottom">
    <footer>
        <OverflowToolbar>
            <ToolbarSpacer/>
            <Button
                icon="sap-icon://open-folder"
                tooltip="Abrir diretório com arquivos"
                press="onOpenFolder" />
            <Button
                icon="sap-icon://upload"
                tooltip="Upload Anexo"
                press="onUploadAnexo" />
        </OverflowToolbar>
    </footer>
    <Table items="{anexos>/}" mode="Delete" delete="onTableLancAnexoDelete">
        <columns>
            <Column width="4em">
                <Text text="{i18n>home-cts-col-id}" />
            </Column>
            <Column>
                <Text text="{i18n>home-cts-col-descricao}" />
            </Column>
        </columns>
        <items>
        <ColumnListItem type="{conf>/ColumnType}">
            <cells>
                <Text text="{anexos>_id}" />
                <Text text="{anexos>caminho}" />
            </cells>
            </ColumnListItem>
        </items>
    </Table>
</Popover>

</core:FragmentDefinition>
