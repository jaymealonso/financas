<mvc:View
	controllerName="sap.ui.demo.basicTemplate.controller.Home"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		title="{i18n>title}">
		<content>
			<Table items="{contas>/}">
				<headerToolbar>
					<OverFlowToolbar>
						<Title text="Contas" />
						<ToolbarSpacer />
						<Button icon="sap-icon://create" tooltip="Nova conta" press="onNewConta" />
					</OverFlowToolbar>
				</headerToolbar>
				<columns>
					<Column width="4em">
						<Text text="Id" />
					</Column>
					<Column>
						<Text text="Descrição" />
					</Column>
					<Column>
						<Text text="Numero" />
					</Column>
					<Column hAlign="Center">
						<Text text="Moeda" />
					</Column>
					<Column hAlign="Center">
						<Text text="Tipo" />
					</Column>
					<Column hAlign="Center" >
						<Text text="Lnç. Categ." tooltip="Lançamento já Categorizados" />
					</Column>
					<Column hAlign="Center">
						<Text text="Lnç. não Categ." tooltip="Lançamento ainda não Categorizados" />
					</Column>
					<Column width="3.5em">
						<Text tooltip="" />
					</Column>
					<Column width="3.5em">
						<Text tooltip="Editar" />
					</Column>
					<Column width="3.5em">
						<Text tooltip="Lançamentos" />
					</Column>
				</columns>
				<items>
					<core:Fragment fragmentName="sap.ui.demo.basicTemplate.view.Conta-display" type="XML" />
				</items>
			</Table>		
		</content>
	</Page>
</mvc:View>